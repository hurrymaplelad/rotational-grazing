package aph.rg{	import flash.display.MovieClip;	import flash.geom.Point;	import flash.events.Event;	import aph.grids.Grid;	import aph.grids.ParaGrid;	import aph.grids.Tiler;	public class Grass extends MovieClip {		private var _biomass:Number = 100;		private const MAX_BIOMASS = 200;				public function grow():void {			if(_biomass<MAX_BIOMASS)				_biomass+=.1;			if(_biomass>MAX_BIOMASS)				_biomass=MAX_BIOMASS;			gotoAndStop(Math.ceil(totalFrames*_biomass/MAX_BIOMASS));		}				public function kill(n:Number):void {			_biomass-=n;		}				public function get biomass():Number {			return _biomass;		}	}}