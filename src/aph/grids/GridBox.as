package aph.grids{	import aph.grids.GridPoint;		public class GridBox {				public var row:int;		public var column:int;		public var width:int;		public var height:int;				/** Constructor **/		public function GridBox(corner1:GridPoint, corner2:GridPoint){			width = Math.abs(corner1.c - corner2.c);			height = Math.abs(corner1.r - corner2.r);						row = Math.min(corner1.r, corner2.r);			column = Math.min(corner1.c, corner2.c);		}				public function get left():int{			return column;		}		public function get right():int{			return column+width;		}		public function get top():int{			return row+height;		}		public function get bottom():int{			return row;		}	}}