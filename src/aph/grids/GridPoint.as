package aph.grids { 	public class GridPoint{		public var r:int;		public var c:int;				public function GridPoint(row:int, column:int){			r=row;			c=column;		}				public function get left():GridPoint {			return new GridPoint(r, c-1);		}				public function get right():GridPoint {			return new GridPoint(r, c+1);		}				public function get above():GridPoint {			return new GridPoint(r+1, c);		}				public function get below():GridPoint {			return new GridPoint(r-1, c);		}				public function equals(gp:GridPoint){			return(r==gp.r&&c==gp.c);		}	}}